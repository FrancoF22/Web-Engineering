<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>d:/Java/TomcatWork</param-value>
    </context-param>
    
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.author</param-name>
        <param-value>AuleWeb-Team</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/home_admin,/responsabile,/aula,/evento,/modifica-aule,/attrezzatura,/modifica-evento,/modifica-gruppo,/gruppo,/gestisci_responsabile,/modifica-calendario</param-value>        
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/aule_web</param-value>
    </context-param>
    <servlet>
        <servlet-name>Gruppo</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.CreaGruppo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneGruppo</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciGruppo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccessoAdmin</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.HomeAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaFacolta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraFacolta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Responsabile</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.CreaResponsabile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneResponsabile</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciResponsabile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Attrezzatura</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.CreaAttrezzatura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneAttrezzatura</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciAttrezzatura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaAttrezzature</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraAttrezzature</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Aula</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.CreaAula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneAula</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciAula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaAule</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraAule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Calendario</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraCalendarioEventi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneCalendario</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciCalendarioEventi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventiResponsabile</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.HomeResponsabile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaEventi</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraEventi</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evento</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.CreaEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneEvento</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.GestisciEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InfoEvento</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.InfoEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EventiCorso</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.EventiCorso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaDipartimenti</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.MostraDipartimenti</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListaDipartimenti</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EventiAttuali</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.EventiAttuali</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EventiAttuali</servlet-name>
        <url-pattern>/eventi-programmati</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Logout</servlet-class>
    </servlet>   
    
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Aula</servlet-name>
        <url-pattern>/aula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaAule</servlet-name>
        <url-pattern>/aule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneAula</servlet-name>
        <url-pattern>/modifica-aule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Attrezzatura</servlet-name>
        <url-pattern>/attrezzatura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessoAdmin</servlet-name>
        <url-pattern>/home_admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneAttrezzatura</servlet-name>
        <url-pattern>/modifica-attrezzatura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaAttrezzature</servlet-name>
        <url-pattern>/attrezzature</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Calendario</servlet-name>
        <url-pattern>/calendario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneCalendario</servlet-name>
        <url-pattern>/modifica-calendario</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>ListaEventi</servlet-name>
        <url-pattern>/eventi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evento</servlet-name>
        <url-pattern>/evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneEvento</servlet-name>
        <url-pattern>/modifica-evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InfoEvento</servlet-name>
        <url-pattern>/info-evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventiCorso</servlet-name>
        <url-pattern>/eventi-corso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventiResponsabile</servlet-name>
        <url-pattern>/home_responsabile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaFacolta</servlet-name>
        <url-pattern>/facolta</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Responsabile</servlet-name>
        <url-pattern>/responsabile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneResponsabile</servlet-name>
        <url-pattern>/gestisci_responsabile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GestioneGruppo</servlet-name>
        <url-pattern>/modifica-gruppo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Gruppo</servlet-name>
        <url-pattern>/gruppo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/aule_web</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
