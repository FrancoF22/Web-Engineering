<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>d:/Java/TomcatWork</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.author</param-name>
        <param-value>AuleWeb-Team</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>ISO-8859-1</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.filler.timestamp</param-name>
        <param-value>it.univaq.f4i.iw.ex.newspaper.controller.DummyModelFiller</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/aule_web</param-value>
    </context-param>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VistaAula</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.VistaAula</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Evento</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.evento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VistaEvento</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.VistaEvento</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>calendario</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.calendario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VistaCalendario</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.VistaCalendario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Profilo</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.Profilo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaEventi</servlet-name>
        <servlet-class>it.univaq.f4i.iw.auleweb.controller.ListaEventi</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VistaAula</servlet-name>
        <url-pattern>/vistaAula</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Evento</servlet-name>
        <url-pattern>/evento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VistaEvento</servlet-name>
        <url-pattern>/vistaEvento</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>calendario</servlet-name>
        <url-pattern>/calendario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VistaCalendario</servlet-name>
        <url-pattern>/vistaCalendario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Profilo</servlet-name>
        <url-pattern>/profilo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaEventi</servlet-name>
        <url-pattern>/listaEventi</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/aule_web</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
